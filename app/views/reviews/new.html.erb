<div class="centered jumbotron">
  <h1 class="display-4">New Review for Hearo <%= @hearo.full_name %></h1>

<% if @review.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this @review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<div class='row'>
    <div class='col'>
        <%= form_with(model: @review, url: hearo_reviews_path(@hearo))  do |form| %>


        <div class="field form-group row">
            <%= form.label 'Score:', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :score, class: "form-control" %>
            </div>
        </div>

        <div class="field form-group row">
            <%= form.label "Notes:", class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_area :content, class: "form-control" %>
            </div>
        </div>

        
          <div class="actions form-group">
              <div>
              <%= form.submit "Submit Review", class: "btn btn-primary btn-lg" %>
              </div>
          </div>

        </div>
    </div>

<% end %>

</div>